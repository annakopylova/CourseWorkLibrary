<Window x:Class="Library.Views.StudentRegiserForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="Login" Height="600" Width="500" FontSize="14"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    <Border Background="#2e3137" CornerRadius="20" Margin="20">
        <StackPanel>
            <Button Name="CloseBtn" Margin="0,13,15,0" HorizontalAlignment="Right" 
                    Style="{StaticResource CloseButton}" Click="CloseBtn_Click"/>
            <StackPanel Margin="20,20,20,10">
                <Label Content="Регистрация" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
            </StackPanel>
            <Grid>
                <Label Content="Факультет" Margin="80,0,302,0" Foreground="#FFC7BDBD"/>
            </Grid>
            <TextBox Height="28" Width="300" TextWrapping="Wrap" HorizontalAlignment="Center" Name="faculty"/>
            <Label Content="Курс" Margin="80,10,0,0" Foreground="#FFC7BDBD"/>
            <TextBox Height="28" Width="300" TextWrapping="Wrap" HorizontalAlignment="Center" Name="course"/>
            <Label Content="Группа" Margin="80,10,0,0" Foreground="#FFC7BDBD"/>
            <TextBox Height="28" Width="300" HorizontalAlignment="Center" Name="group"/>
            <Label Content="Номер зачётно книжки" Margin="80,10,0,0" Foreground="#FFC7BDBD"/>
            <TextBox Height="28" Width="300" HorizontalAlignment="Center" Name="registrationPacket"/>
            <Button Name="RegisterBtn" Content="Зарегистрироваться" Height="30" Width="300" HorizontalAlignment="Center" Margin="0, 40, 0, 0" Background="#FFC7BDBD" Click="Register_Click"/>
        </StackPanel>
    </Border>
</Window>
