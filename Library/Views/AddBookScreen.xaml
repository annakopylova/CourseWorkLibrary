<Window x:Class="Library.Views.AddBookScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.Views"
        mc:Ignorable="d"
        Title="Добавление книги" Height="283" Width="400">
    <StackPanel>
        <Label Content="Название"/>
        <TextBox Height="25" Name="title"/>
        <Label Content="Автор"/>
        <TextBox Height="25" Name="author"/>
        <Label Content="Дата публикации"/>
        <TextBox Height="25" Name="publicationDate"/>
        <Label Content="Жанр"/>
        <TextBox Height="25" Name="genre"/>
        <Button Margin="0,0,0,0" Height="40" Content="Добавить" x:Name="addBook" Click="AddBook_Click"/>
    </StackPanel>
</Window>
